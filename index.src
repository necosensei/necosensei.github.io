  % Bunyakovsky conjecture

  \def\LC{{\mathrm{LC}}}
  \def\P{{\mathbb P}}

  \begin{aligned}
    &amp; \Let f \in \Z[X],\; f(\N^+) := \{f(x)\mid x \in \N^+\},\; \P \text{ be the set of all rational primes,} \\
    &amp; \LC(f) \text{ be the leading coefficient of } f.\\
    &amp; |f(\N^+) \cap \P| = \infty \;\stackrel{?}{\Leftarrow} \;\left\{
    \begin{aligned}
      &amp; \LC(f) &gt; 0 \; \wedge \\
      &amp; \not\exists (g,h) \in (\Z[X]\setminus\Z)^2 \st f  = g \cdot h\; \wedge \\
      &amp; \gcd(f(\N^+)) = 1.
    \end{aligned}
    \right.
  \end{aligned}

\]

